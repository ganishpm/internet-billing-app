<%- include('../partials/header') %>

<!-- Header Actions -->
<div class="flex justify-between items-center mb-6">
    <div>
        <h2 class="text-2xl font-bold text-gray-800">Paket Internet</h2>
        <p class="text-gray-600 mt-1">Kelola paket layanan internet</p>
    </div>
    <a href="/packages/add" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center transition">
        <i class="fas fa-plus mr-2"></i>Tambah Paket
    </a>
</div>

<!-- Packages Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% packages.forEach(pkg => { %>
    <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
        <div class="p-6">
            <div class="flex justify-between items-start mb-4">
                <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-wifi text-white text-xl"></i>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="px-2 py-1 text-xs rounded-full <%= pkg.type === 'home' ? 'bg-blue-100 text-blue-700' : 'bg-purple-100 text-purple-700' %>">
                        <%= pkg.type === 'home' ? 'Rumah' : 'Bisnis' %>
                    </span>
                    <button onclick="togglePackage('<%= pkg._id %>')" class="text-gray-400 hover:text-gray-600">
                        <i class="fas fa-toggle-<%= pkg.isActive ? 'on text-green-500' : 'off text-gray-400' %>"></i>
                    </button>
                </div>
            </div>
            
            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= pkg.name %></h3>
            <p class="text-3xl font-bold text-blue-600 mb-2">Rp <%= pkg.price.toLocaleString('id-ID') %></p>
            <p class="text-gray-600 mb-4">/bulan</p>
            
            <div class="space-y-2 mb-4">
                <div class="flex items-center text-sm text-gray-600">
                    <i class="fas fa-tachometer-alt mr-2 text-blue-500"></i>
                    Kecepatan: <%= pkg.speed %>
                </div>
                <% if (pkg.description) { %>
                <p class="text-sm text-gray-600"><%= pkg.description %></p>
                <% } %>
            </div>
            
            <div class="flex justify-between items-center pt-4 border-t">
                <span class="text-xs text-gray-500">
                    Ditambahkan <%= moment(pkg.createdAt).fromNow() %>
                </span>
                <div class="flex space-x-2">
                    <!-- TOMBOL EDIT YANG DIPERBAIKI -->
                    <a href="/packages/edit/<%= pkg._id %>" class="text-blue-600 hover:text-blue-700" title="Edit Paket">
                        <i class="fas fa-edit"></i>
                    </a>
                    <!-- TOMBOL HAPUS YANG DIPERBAIKI -->
                    <form action="/packages/<%= pkg._id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Apakah Anda yakin ingin menghapus paket ini?');">
                        <button type="submit" class="text-red-600 hover:text-red-700" title="Hapus Paket">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>

<% if (packages.length === 0) { %>
<div class="bg-white rounded-xl shadow-md p-12 text-center">
    <i class="fas fa-box-open text-gray-300 text-6xl mb-4"></i>
    <h3 class="text-xl font-semibold text-gray-700 mb-2">Belum Ada Paket</h3>
    <p class="text-gray-500 mb-6">Mulai dengan menambahkan paket internet pertama</p>
    <a href="/packages/add" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition inline-flex items-center">
        <i class="fas fa-plus mr-2"></i>Tambah Paket
    </a>
</div>
<% } %>

<%- include('../partials/footer') %>

<script>
function togglePackage(packageId) {
    fetch(`/packages/toggle/${packageId}`, {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}
</script>
