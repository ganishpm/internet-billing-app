<%- include('../partials/header') %>

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Catat Pembayaran</h2>
            <a href="/invoices/view/<%= invoice._id %>" class="text-gray-600 hover:text-gray-800">
                <i class="fas fa-arrow-left mr-2"></i>Kembali ke Tagihan
            </a>
        </div>

        <!-- Invoice Info -->
        <div class="bg-blue-50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold text-blue-900 mb-2">Detail Tagihan</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="text-gray-600">No. Tagihan:</span>
                    <span class="font-medium text-gray-900 ml-2"><%= invoice.invoiceNumber %></span>
                </div>
                <div>
                    <span class="text-gray-600">Pelanggan:</span>
                    <span class="font-medium text-gray-900 ml-2"><%= invoice.customer.name %></span>
                </div>
                <div>
                    <span class="text-gray-600">Paket:</span>
                    <span class="font-medium text-gray-900 ml-2"><%= invoice.package.name %></span>
                </div>
                <div>
                    <span class="text-gray-600">Jumlah:</span>
                    <span class="font-bold text-blue-600 ml-2">Rp <%= invoice.amount.toLocaleString('id-ID') %></span>
                </div>
            </div>
        </div>

        <!-- Payment Form -->
        <form action="/payments/add/<%= invoice._id %>" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">
                        Metode Pembayaran <span class="text-red-500">*</span>
                    </label>
                    <select name="method" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Pilih Metode</option>
                        <option value="cash">Tunai</option>
                        <option value="transfer">Transfer Bank</option>
                        <option value="e-wallet">E-Wallet</option>
                    </select>
                </div>
                
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">
                        No. Referensi (Opsional)
                    </label>
                    <input type="text" name="reference"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Contoh: 1234567890">
                </div>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-4 mt-6">
                <p class="text-sm text-gray-600">
                    <i class="fas fa-info-circle mr-2"></i>
                    Pembayaran akan dicatat sebesar <strong>Rp <%= invoice.amount.toLocaleString('id-ID') %></strong> dan status tagihan akan otomatis berubah menjadi "Lunas".
                </p>
            </div>
            
            <div class="flex justify-end space-x-4 mt-8">
                <a href="/invoices/view/<%= invoice._id %>" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                    Batal
                </a>
                <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                    <i class="fas fa-check mr-2"></i>Simpan Pembayaran
                </button>
            </div>
            
            <div class="flex justify-end space-x-4 mt-8">
                 <a href="/invoices/view/<%= invoice._id %>" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                   <i class="fas fa-arrow-left mr-2"></i>Kembali ke Tagihan
                 </a>
                 <button onclick="openReceivePaymentModal()" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                   <i class="fas fa-hand-holding-usdollar mr-2"></i>Terima Pembayaran
                 </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Terima Pembayaran -->
<div id="receivePaymentModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-xl p-6 w-full max-w-md">
        <h3 <%- include('../partials/header') %>
        <h3 class="text-xl font-bold text-gray-800 mb-4">Terima Pembayaran</h3>
        <div class="mb-4">
            <p class="text-sm text-gray-600">
                <strong>Tagihan:</strong> <%= invoice.invoiceNumber %><br>
                <strong>Pelanggan:</strong> <%= invoice.customer.name %><br>
                <strong>Jumlah:</strong> Rp <%= invoice.amount.toLocaleString('id-ID') %>
            </p>
        </div>
        <form action="/payments/add/<%= invoice._id %>" method="POST">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-medium mb-2">Metode Pembayaran</label>
                <select name="method" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="cash">Tunai</option>
                    <option value="transfer">Transfer Bank</option>
                    <option value="e-wallet">E-Wallet</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-medium mb-2">No. Referensi</label>
                <input type="text" name="reference"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Contoh: 1234567890">
            </div>
            <div class="flex justify-end space-x-3">
                <button type="button" onclick="closeReceivePaymentModal()" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                    Batal
                </button>
                <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                    <i class="fas fa-check mr-2"></i>Simpan
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function openReceivePaymentModal() {
    document.getElementById('receivePaymentModal').classList.remove('hidden');
}

function closeReceivePaymentModal() {
    document.getElementById('receivePaymentModal').classList.add('hidden');
}
</script>

<%- include('../partials/footer') %>
